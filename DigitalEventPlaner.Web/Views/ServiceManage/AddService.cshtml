@model DigitalEventPlaner.Web.Models.Services.ServiceViewModel
@using DataLayer.Enumerations
@{
    ViewData["Title"] = "Home Page";
    Layout = "_ServiceLayout";
}

<h3>Add service</h3>

<h2>@Model.UserId</h2>


<form method="POST" enctype="multipart/form-data">
    <input type="hidden" name="UserId" value="@Model.UserId"/>
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" name="Name" placeholder="Enter Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ServiceType">Service Type</label>
        <select class="form-control" asp-for="ServiceType" asp-items="Html.GetEnumSelectList<ServiceType>()">
            <option selected="selected" value="">Select Type</option>
        </select>
        <span asp-validation-for="ServiceType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <input type="text" class="form-control" name="Description" placeholder="Enter Username" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="EventsPerDay">Events per day</label>
        <input type="number" class="form-control" name="EventsPerDay" placeholder="Events per day" />
        <span asp-validation-for="EventsPerDay" class="text-danger"></span>
    </div>
    <button class="btn btn-default">Submit</button>
</form>