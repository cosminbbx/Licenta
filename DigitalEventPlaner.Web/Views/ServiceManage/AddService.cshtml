@model DigitalEventPlaner.Web.Models.Services.ServiceViewModel
@using DataLayer.Enumerations
@{
    ViewData["Title"] = "Home Page";
    Layout = "_ServiceLayout";
}

<div class="container container-inside">
    <div class="font-quicksand page-title">ADD SERVICE</div>

    <form method="POST" enctype="multipart/form-data">
        @Html.HiddenFor(m => m.UserId)
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" class="form-control" name="Name" asp-for="Name" placeholder="Enter Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="ServiceType">Service Type</label>
            <select class="form-control" asp-for="ServiceType" asp-items="Html.GetEnumSelectList<ServiceType>()">
                <option selected="selected" value="">Select Type</option>
            </select>
            <span asp-validation-for="ServiceType" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Description">Description</label>
            <textarea  type="text" class="form-control" name="Description" asp-for="Description" placeholder="Enter Description" cols="40" rows="5"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="EventsPerDay">Events per day</label>
            <input type="number" class="form-control" name="EventsPerDay" asp-for="EventsPerDay" placeholder="Events per day" value="1" min="1" max="20" />
            <span asp-validation-for="EventsPerDay" class="text-danger"></span>
        </div>
        <button class="btn btn-outline-primary btn-sm">Submit</button>
    </form>
</div>